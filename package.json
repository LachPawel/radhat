{
  "name": "radhat",
  "version": "0.1.0",
  "description": "Deterministic CREATE2 Deposit Proxy System on Sepolia",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.ts --network hardhat",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "rust:run": "cd rust-backend && cargo run",
    "rust:build": "cd rust-backend && cargo build --release",
    "rust:test": "cd rust-backend && cargo test",
    "sync:deployments": "./scripts/sync-deployments.sh",
    "frontend": "cd app && pnpm dev",
    "frontend:build": "cd app && pnpm build",
    "frontend:lint": "cd app && pnpm lint",
    "frontend:format": "cd app && pnpm format",
    "frontend:typecheck": "cd app && pnpm typecheck",
    "frontend:test": "cd app && pnpm test:run",
    "prepare": "husky"
  },
  "lint-staged": {
    "app/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "app/src/**/*.css": [
      "prettier --write"
    ]
  },
  "keywords": [
    "ethereum",
    "create2",
    "proxy",
    "rust",
    "hardhat"
  ],
  "author": "LachPawel",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.4.0",
    "hardhat": "^2.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.5.0"
  }
}

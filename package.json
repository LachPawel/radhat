{
  "name": "radhat",
  "version": "0.1.0",
  "description": "Deterministic CREATE2 Deposit Proxy System on Sepolia",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
